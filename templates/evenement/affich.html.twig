{% extends 'basefront.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
{% for i in Evenement %}
<div class="col-md-5 order-details">
  <div class="section-title text-center">
    <h3 class="title">Evenement</h3>
  </div>
  <div class="order-summary">
    <div class="order-col">
      <div><strong>Evenement</strong></div>
    </div>
    <div class="order-products">
      <div class="order-col">
        <div>Nom du Evenement</div>
        <div>{{i.Nom}}</div>
      </div>
    </div>
    <div class="order-products">
      <div class="order-col">
        <div>Image</div>
        <div><img src="{{ asset('/uploads/your-image.jpg') }}" alt=""></div>
      </div>
    <div class="order-col">
      <div>Date debut l'événement</div>
      <div>{{ i.Datedebut|date('Y-m-d H:i:s') }}</div>
    </div>
    <div class="order-col">
      <div>Date fin l'événement</div>
      <div>{{ i.Datefin|date('Y-m-d H:i:s') }}</div>
    </div>
    <div class="order-col">
      <div>Lieu de l'événement</div>
      <div>{{i.lieu}}</div>
    </div>
    <div class="order-col">
      <div>Description de l'événement</div>
      <div>{{i.Description}}</div>
    </div>
    <div class="order-col">
      <div>Type</div>
      
      <div><strong class="order-total">{{i.Type}}</strong></div>
    </div>
    <div class="order-col">
      <div>Notre sponsor</div>
      <div>{{i.Sponsors}}</div>
    </div>
  </div>
  <div class="input-radio">
    <input type="radio" name="payment" id="payment-2">
  </div>
  <a href="#" class="primary-btn order-submit">Participer dans Evenement</a>
</div>
     
{%endfor%}
{% endblock %}

{% block footer %}

{% endblock %}

