{% extends 'baseback.html.twig' %}

{% block body %}
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <tbody>
                <tr>
                    <h1>Produit Statistics</h1>
                    <p>Total number of Produit: {{ totalProduits }}</p>

                    <h2>Nombre des Produit par Categorys</h2>

                    <canvas id="ProduitPerRoleChart" style="width: 200px; height: 75px;"></canvas>

                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                    <script>
                        var libelles = [];
                        var ProduitCounts = [];
                        {% for row in ProduitCategorys %}
                        var libelle = '{{ row['libelle'] }}';
                        var ProduitCount = '{{ row["ProduitCount"] }}';
                        // map role names to display names
                        if (libelle == 'vêtement') {
                            libelle = 'vêtement';
                        } else if (libelle =='Appareils') {
                            libelle == 'Appareils';
                        } else if (libelle =='Accessoires') {
                            libelle = 'Accessoires';
                        }
                        libelles.push(libelle);
                        ProduitCounts.push(ProduitCount);
                        {% endfor %}
                        var chartData = {
                            labels: libelles,
                            datasets: [{
                                label: 'Nombre des Produit',
                                data: ProduitCounts,
                                backgroundColor: 'rgba(54, 122, 235, 0.2)',
                                borderColor: 'rgba(54, 162, 235, 1)',
                                borderWidth: 1
                            }]
                        };
                        var chartOptions = {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        };
                        var chart = new Chart('ProduitPerRoleChart', {
                            type: 'bar',
                            data: chartData,
                            options: chartOptions
                        });
                    </script>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
