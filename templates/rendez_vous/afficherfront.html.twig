{% extends 'baseEmna.html.twig' %}

{% block title %}Rendez_Vous{% endblock %}
{% block topheader %}
{% include 'test.html.twig' %}

{% endblock %}

{% block body %}



 {% for message in app.flashes('message') %}
<div class="col-xs4">
<div class="p-3 my-2 rounded-2 success"> {{message}}</div>
</div>
</div>
{% endfor %}
<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
                    <div class="row">

					<div class="col-md-17">
                <div class="card">
                  <div class="card-body">
                    <li><a href="{{ path('order_By_Nom')}}">Trie par Nom</a></li>
                     
                   <li><a href="{{ path('order_By_Date')}}">Trie par Date</a></li>
                 <p class="card-description" > Ajouter Rendez_vous <code> <a href="{{ path('addrdv') }}" class="primary-btn" >Ajouter</a> </code>

                    <h4 class="card-title">Table des Rendez_Vous</h4>
   
    
    
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Load Flashy default JavaScript -->
    <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <!-- Include Flashy default partial -->
   {% for message in app.flashes('mercuryseries_flashy_notification') %}
    <script id="flashy-template" type="text/template">
        <div class="flashy flashy--{{ message.type }}">
            <a class="flashy__body" href="#" target="_blank"></a>
        </div>
    </script>

    <script>
        flashy("{{ message.message }}", "{{ message.link }}");
    </script>
    {% endfor %} 
                    
                    </p>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Cours</th>
                            <th>Date</th>
                             <th>Modifier-rendez-vous</th>
                              <th>Annuler rendez-vous</th>
                           
                            
                          </tr>
                        </thead>
                        <tbody>
                        {% for a in rdv %}
                          <tr>
                          
                           
                          
                            <td> {{a.Coachings  }} </td>
                            <td> {{a.daterdv.format('j-m-y') }} </td>
                            <td><a href="{{ path('updaterdv', {id:a.id}) }}" class="primary-btn" >Modifier</a></td>
                            <td><a href="{{ path('deleterdv', {id:a.id}) }}" class="primary-btn" >Annuler</a></td>
 </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                 </div>
                  </div>
                </div>



{% endblock %}






    